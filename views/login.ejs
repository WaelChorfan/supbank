<!-- views/login.ejs -->
<!doctype html>
<html>
<head>

	<title>Login</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<!-- load fontawesome -->
	<!-- favicon -->
	<link rel="shortcut icon" href="http://localhost:5000/images/favicon.png">
	<!-- local css  -->
	<link rel="stylesheet" href="/stylesheets/style.css">


</head>

<body>
	<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header"><a class="navbar-brand" href="/">Sup Bank</a></div>
        <ul class="nav navbar-nav">
        </ul>
    </div>
</nav>

	<div class="jumbotron text-center">
		<div class="container">
			<div class="col-sm-6 col-sm-offset-3">
				<h2><span class="fa fa-sign-in"></span> Login</h2>
				<!-- show any messages that come back with authentication -->
				<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
				<% } %>

				<!-- LOGIN FORM -->
				<form action="/login" method="post">
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email">
					</div>
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password">
					</div>

					<button type="submit" class="btn btn-warning btn-lg">Login</button>
				</form>

				<hr>

				<p>Need an account? <a href="/signup">Signup</a></p>
				<p>Or go <a href="/">home</a>.</p>

			</div>

		</div>
	</div>

	<%- include includes/footer.ejs %>
	<script src="http://localhost:5000/javascripts/msc.js"></script>

</body>

</html